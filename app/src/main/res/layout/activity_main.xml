<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hecorat.importfile.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#111111">
        <TextView
            android:id="@+id/btn_back_gallery"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/video_gallery_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/image_gallery_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Images"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/audio_gallery_title"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Audio"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#326ee6"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
